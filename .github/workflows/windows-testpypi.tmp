name: Windows wheel TestPyPI

on: [push]

jobs:
  build_wheel_windows64:
    name: Build wheel on ${{ matrix.os }} ${{ matrix.arch }} Py-${{ matrix.python-version }}
    runs-on: ${{ matrix.os }}
    strategy:
      fail-fast: false
      matrix:
        os: [ windows-2019 ]
        arch: [ x64 ]
        python-version: ["3.6", "3.7", "3.8", "3.9", "3.10"]
    steps:
      - uses: actions/checkout@v3
        
      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: ${{ matrix.python-version }}

      - name: Display Python version
        run: python --version

      - name: Build Python wheel
        run: ./tools/windows-wheels.cmd

      - uses: actions/upload-artifact@v3
        with:
          name: wheels
          path: ./build/wheels

  test_wheel_windows:
    name: Test Python ${{ matrix.python-version }} wheel on Windows
    runs-on: windows-latest
    needs: build_wheel_windows64
    strategy:
      fail-fast: false
      matrix:
        python-version: ["3.6", "3.7", "3.8", "3.9", "3.10"]
    steps:
      - uses: actions/checkout@v3

      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v4
        with:
          python-version: ${{ matrix.python-version }}

      - name: Download artifacts
        uses: actions/download-artifact@v2
        with:
          name: wheels
          path: wheels

      - name: Install deplex package
        env:
          py_version: ${{ matrix.python-version }}
        run: |
          python -m pip install deplex --find-links .\wheels\

      - name: Install Test requirements
        run: |
          python -m pip install -r python/requirements_test.txt

      - name: Python tests
        run: |
          python -m pytest python